<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="670.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.signUpController">
   <children>
      <Label layoutX="375.0" layoutY="14.0" text="Sign Up" textFill="#0977ec">
         <font>
            <Font name="System Bold Italic" size="55.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="115.0" text="please Enter your Email : ">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="164.0" text="Please Choose a password for yourself :">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="211.0" text="please Enter your First Name :">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="263.0" text="please Enter your Last Name :">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="signupButton" layoutX="416.0" layoutY="544.0" mnemonicParsing="false" onAction="#signupController" text="Sign Up">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Button>
      <TextField fx:id="emailTextField" layoutX="314.0" layoutY="120.0" />
      <TextField fx:id="passwordTextField" layoutX="476.0" layoutY="169.0" />
      <TextField fx:id="firstNameTextField" layoutX="375.0" layoutY="216.0" />
      <TextField fx:id="lastNameTextField" layoutX="369.0" layoutY="268.0" />
      <Label fx:id="resultLabel" alignment="CENTER" layoutX="450.0" layoutY="492.0" textFill="#ec0808" />
      <Label layoutX="45.0" layoutY="335.0" text="Already Have an Account?">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="284.0" layoutY="335.0" mnemonicParsing="false" onAction="#loginButtonController" text="Login" />
   </children>
</AnchorPane>
