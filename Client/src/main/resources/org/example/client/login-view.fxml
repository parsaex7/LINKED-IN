<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="670.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.logInViewController">
   <children>
      <Label layoutX="377.0" layoutY="53.0" text="Log IN">
         <font>
            <Font name="System Bold Italic" size="64.0" />
         </font>
      </Label>
      <Label layoutX="365.0" layoutY="187.0" text="please enter your Email : ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="emailTextField" layoutX="401.0" layoutY="268.0" />
      <Label layoutX="300.0" layoutY="326.0" text="Please choose a password for yourself : ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="passwordTextField" layoutX="402.0" layoutY="400.0" />
      <Button fx:id="loginButton" layoutX="454.0" layoutY="536.0" mnemonicParsing="false" onAction="#loginButtonClicked" text="Send" />
      <Label fx:id="resultLabel" layoutX="395.0" layoutY="548.0" textFill="#df0707">
         <font>
            <Font size="18.0" />
         </font></Label>
      <Label layoutX="333.0" layoutY="460.0" text="Dont Have an Account?">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" layoutX="497.0" layoutY="457.0" mnemonicParsing="false" onAction="#signUpButtonController" prefHeight="25.0" prefWidth="43.0" text="Sign Up">
         <font>
            <Font size="8.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
